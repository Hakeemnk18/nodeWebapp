

<%- include('../partials/admin/header') %>

    <div class="login-container">
        <div class="product-form-container">
            <h2 class="product-form-title">Add New Product</h2>
            <form class="product-form" action="/submit-product" method="POST" enctype="multipart/form-data">
                <!-- Product Name -->
                <div class="product-form-group">
                    <label class="product-form-label" for="name">Product Name</label>
                    <input class="product-form-input" type="text" id="name" name="name" required>
                </div>
                
                <!-- Description -->
                <div class="product-form-group">
                    <label class="product-form-label" for="description">Description</label>
                    <textarea class="product-form-textarea" id="description" name="description" required></textarea>
                </div>
                
                <!-- Price -->
                <div class="product-form-group">
                    <label class="product-form-label" for="price">Price</label>
                    <input class="product-form-input" type="number" id="price" name="price" step="0.01" required>
                </div>
                
                <!-- Image -->
                <div class="product-form-group">
                    <label class="product-form-label" for="image">Product Image</label>
                    <input class="product-form-input" type="file" id="image" name="image" accept="image/*" required>
                </div>
                
                <!-- Variants -->
                <h3 class="product-variant-title">Variants</h3>
                <div class="product-variant-group">
                    <div class="product-form-group">
                        <label class="product-form-label" for="size">Size</label>
                        <input class="product-form-input" type="text" id="size" name="variant[size]" required>
                    </div>
                    
                    <div class="product-form-group">
                        <label class="product-form-label" for="stock">Stock</label>
                        <input class="product-form-input" type="number" id="stock" name="variant[stock]" required>
                    </div>
                    
                    <div class="product-form-group">
                        <label class="product-form-label" for="color">Color</label>
                        <input class="product-form-input" type="text" id="color" name="variant[color]" required>
                    </div>
                </div>
                
                <!-- Submit Button -->
                <button class="product-submit-button" type="submit">Add Product</button>
            </form>
        </div>
    </div>
    
    <%- include('../partials/admin/footer') %>