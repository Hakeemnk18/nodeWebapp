<%- include('../partials/admin/header') %>

    <div id="page-wrapper">
        <div class="header">
            <h1 class="page-header">
                Edit Category
            </h1>
            <ol class="breadcrumb">
                <li><a href="#">Home</a></li>
                <li><a href="#">Forms</a></li>
                <li class="active">Data</li>
            </ol>

        </div>

        <div id="page-inner">
            <div class="row">
                <div class="col-lg-12">
                    <div class="card">

                        <div class="card-content">
                            <form class="col s12" action="/admin/category/editCategory/<%= id %>" method="post"
                                >
                                <div class="row">
                                    <div class="input-field col s12">
                                        <input placeholder="Category Name" id="first_name" type="text" class="validate"
                                            name="categoryName" value="<%= categoryName %>">
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="input-field col s12">
                                        <input placeholder="Description" id="disabled" type="text" class="validate"
                                            name="description" value="<%= description %>">
                                    </div>
                                </div>
                                <div class="row">
                                    <div>
                                        <button type="submit" class="btn btn-success">edit category</button>
                                    </div>
                                </div>
                            </form>

                            <div class="clearBoth"></div>
                        </div>
                    </div>
                </div>
            </div>



            <!-- /.panel-body -->
        </div>
        <!-- /.col-lg-12 -->
        <%- include('../partials/admin/footer') %>